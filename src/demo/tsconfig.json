{
    "compilerOptions": {
        "composite": true,
        "rootDir": "..",
        "outDir": "../../dist",
        "skipLibCheck": true,
        "target": "ES2022",

        // Overrides
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
    },
    "files": [
        "main.ts",
        "../vue-shim.d.ts"
    ],
    "include": [
        "../**/*.ts",
        "../**/*.vue",
        "**/*.ts",
        "**/*.vue",
    ]
}
